root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.cmd]
end_of_line = crlf

[*.tsv]
end_of_line = lf
indent_style = tab
insert_final_newline = true

[*.{json,yml,yaml,tf,js,ts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{java,xml,html}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
